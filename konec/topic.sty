%
% konec/topic.sty -- bookmarking the topic of a paragraph
%

% \Topic{mark}
% \Topic<label>
% \Topic[mark]{label}
\def\konec@topic@mark#1{\konec@bm@nolabel{}{#1}}
\def\konec@topic@label<#1>{\konec@bm{}{#1}{#1}}
\def\konec@topic@mark@label[#1]#2{\konec@bm{}{#1}{#2}}

% Dispatch
\def\Topic#1{%
	\ifx<#1\def\@tempa{\konec@topic@label#1}\else
	\ifx[#1\def\@tempa{\konec@topic@mark@label#1}\else
		\def\@tempa{\konec@topic@mark{#1}}%
		\fi\fi
	\@tempa}

% End of konec/topic.sty
